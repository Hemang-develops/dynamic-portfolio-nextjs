{
  "private": true,
  "workspaces": ["apps/*"],
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "scripts": {
    "dev": "concurrently \"npm run dev:web\" \"npm run dev:admin\"",
    "dev:web": "cd apps/web && next dev --turbo -p 3000",
    "dev:admin": "cd apps/admin && next dev --turbo -p 3001",
    "start": "npm run dev"
  }
}
